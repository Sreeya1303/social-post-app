import React, { useState, useEffect } from 'react';
import {
    Container,
    Box,
    Typography,
    CircularProgress,
    Alert,
    Grid,
    Paper,
    Card,
    CardContent
} from '@mui/material';
import {
    Article as ArticleIcon,
    Favorite as FavoriteIcon,
    Visibility as VisibilityIcon,
    Comment as CommentIcon
} from '@mui/icons-material';
import Navbar from '../components/Navbar';
import Sidebar from '../components/Sidebar';
import PostCard from '../components/PostCard';
import { postsAPI } from '../services/api';
import { useAuth } from '../context/AuthContext';

/**
 * Dashboard Page Component
 * Displays user's own posts and statistics
 */
const Dashboard = () => {
    const { user } = useAuth();
    const [posts, setPosts] = useState([]);
    const [loading, setLoading] = useState(true);
    const [error, setError] = useState('');
    const [stats, setStats] = useState({
        totalPosts: 0,
        totalLikes: 0,
        totalViews: 0,
        totalComments: 0
    });

    /**
     * Fetch user's posts and calculate stats
     */
    const fetchMyPosts = async () => {
        try {
            setError('');
            setLoading(true);

            const response = await postsAPI.getMyPosts();
            const userPosts = response.data.posts || [];
            setPosts(userPosts);

            // Calculate stats
            const totalLikes = userPosts.reduce((sum, post) => sum + (post.likes?.length || 0), 0);
            const totalViews = userPosts.reduce((sum, post) => sum + (post.views || 0), 0);
            const totalComments = userPosts.reduce((sum, post) => sum + (post.comments?.length || 0), 0);

            setStats({
                totalPosts: userPosts.length,
                totalLikes,
                totalViews,
                totalComments
            });
        } catch (err) {
            setError('Failed to load your posts');
            console.error('Error fetching my posts:', err);
        } finally {
            setLoading(false);
        }
    };

    useEffect(() => {
        fetchMyPosts();
    }, []);

    /**
     * Refresh posts when updated
     */
    const handlePostUpdate = () => {
        fetchMyPosts();
    };

    // Stats cards configuration
    const statsCards = [
        { icon: ArticleIcon, label: 'Total Posts', value: stats.totalPosts, color: '#4facfe', bgColor: '#e3f2fd' },
        { icon: FavoriteIcon, label: 'Total Likes', value: stats.totalLikes, color: '#fa709a', bgColor: '#fce4ec' },
        { icon: VisibilityIcon, label: 'Total Views', value: stats.totalViews, color: '#51cf66', bgColor: '#e8f5e9' },
        { icon: CommentIcon, label: 'Comments', value: stats.totalComments, color: '#ffd43b', bgColor: '#fffde7' }
    ];

    return (
        <Box sx={{ bgcolor: '#f0f2f5', minHeight: '100vh' }}>
            <Navbar />
            <Sidebar />

            {/* Main content with left margin for sidebar */}
            <Box sx={{ ml: '240px' }}>

                <Container maxWidth="lg" sx={{ py: 4 }}>
                    {/* Page Header */}
                    <Box sx={{ mb: 4 }}>
                        <Typography
                            variant="h4"
                            fontWeight={700}
                            sx={{
                                background: 'linear-gradient(45deg, #1976d2, #9c27b0)',
                                WebkitBackgroundClip: 'text',
                                WebkitTextFillColor: 'transparent',
                                mb: 1
                            }}
                        >
                            My Dashboard
                        </Typography>
                        <Typography variant=\"body1\" color=\"text.secondary\">
                        Welcome back, <strong>{user?.username}</strong>! Here's your social activity overview.
                    </Typography>
            </Box >

            {/* Stats Grid */}
            < Grid container spacing={3} sx={{ mb: 4 }}>
                {
                    statsCards.map((stat, index) => {
                        const Icon = stat.icon;
                        return (
                            <Grid item xs={12} sm={6} md={3} key={index}>
                                <Card
                                    elevation={0}
                                    sx={{
                                        borderRadius: 3,
                                        bgcolor: stat.bgColor,
                                        transition: 'transform 0.2s',
                                        '&:hover': {
                                            transform: 'translateY(-4px)',
                                            boxShadow: '0 8px 24px rgba(0,0,0,0.12)'
                                        }
                                    }}
                                >
                                    <CardContent>
                                        <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                                            <Icon sx={{ color: stat.color, fontSize: 32, mr: 1 }} />
                                            <Typography variant=\"h4\" fontWeight={700} color={stat.color}>
                                            {stat.value}
                                        </Typography>
                                    </Box>
                                    <Typography variant=\"body2\" color=\"text.secondary\" fontWeight={600}>
                                    {stat.label}
                                </Typography>
                            </CardContent>
                                </Card >
        </Grid >
    );
})}
                </Grid >

    {/* My Posts Section */ }
    < Paper elevation = { 0} sx = {{ borderRadius: 3, p: 3, mb: 3, bgcolor: '#fff' }}>
        <Typography variant=\"h5\" fontWeight={700} sx={{ mb: 3 }}>
                        My Posts
                    </Typography >

    {/* Loading State */ }
{
    loading && (
        <Box sx={{ display: 'flex', justifyContent: 'center', py: 4 }}>
            <CircularProgress />
        </Box>
    )
}

{/* Error State */ }
{
    error && (
        <Alert severity=\"error\" sx={{ mb: 3 }}>
    { error }
                        </Alert >
                    )
}

{/* Empty State */ }
{
    !loading && posts.length === 0 && (
                        <Box sx={{ textAlign: 'center', py: 6 }}>
                            <ArticleIcon sx={{ fontSize: 64, color: '#bbb', mb: 2 }} />
                            <Typography variant=\"h6\" color=\"text.secondary\">
                                You haven't created any posts yet
                            </Typography>
                            <Typography variant=\"body2\" color=\"text.secondary\" sx={{ mt: 1 }}>
                                Start sharing your thoughts with the world!
                            </Typography >
                        </Box >
                    )
}

{/* Posts List */ }
{
    !loading && posts.length > 0 && (
        <Box>
            {posts.map((post) => (
                <PostCard
                    key={post._id}
                    post={post}
                    onPostUpdated={handlePostUpdate}
                    showStats={true}
                />
            ))}
        </Box>
    )
}
                </Paper >
            </Container >
            </Box >
        </Box >
    );
};

export default Dashboard;
